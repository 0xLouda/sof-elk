{
  "template" : "logstash-*",
  "order" : "1",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "_all" : { "enabled" : true },
      "dynamic_templates" : [
        {
          "ip_address_fields" : {
            "match" : "*_ip",
            "mapping" : { "type" : "ip" }
          }
        },
        {
          "string_fields" : {
            "match" : "*",
            "match_mapping_type" : "text",
            "mapping" : {
              "type" : "text", "norms" : "false",
              "fields" : {
                "keyword" : { "type" : "keyword", "ignore_above" : 256 }
              }
            }
          }
        }
      ],
      "properties" : {
        "@version" : { "type" : "keyword" },
        "syslog_pid" : { "type" : "integer" },
        "source_port" : { "type" : "integer" },
        "destination_port" : { "type" : "integer" },
        "ttl" : { "type" : "integer" },
        "ips" : { "type" : "ip" },
        "key_id" : { "type" : "keyword" },
        "path" : { "type" : "keyword" },
        "original_message" : { "type" : "keyword" },

        "source_geo" : {
          "type" : "object",
          "properties" : {
            "location" : { "type" : "geo_point", "geohash" : true, "geohash_prefix" : true, "geohash_precision" : "1km" }
          }
        },
        "destination_geo" : {
          "dynamic" : true,
          "properties" : {
            "ip" : { "type" : "ip" },
            "location" : { "type" : "geo_point" },
            "latitude" : { "type" : "half_float" },
            "longitude" : { "type" : "half_float" }
          }
        },
        "relay_geo" : {
          "dynamic" : true,
          "properties" : {
            "ip" : { "type" : "ip" },
            "location" : { "type" : "geo_point" },
            "latitude" : { "type" : "half_float" },
            "longitude" : { "type" : "half_float" }
          }
        },
        "answer_geo" : {
          "dynamic" : true,
          "properties" : {
            "ip" : { "type" : "ip" },
            "location" : { "type" : "geo_point" },
            "latitude" : { "type" : "half_float" },
            "longitude" : { "type" : "half_float" }
          }
        }
      }
    }
  }
}
