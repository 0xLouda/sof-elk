{
  "template" : "logstash-*",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "_all" : { "enabled" : true },
      "dynamic_templates" : [ {
        "string_fields" : {
          "match" : "*",
          "match_mapping_type" : "string",
          "mapping" : {
            "type" : "string", "index" : "analyzed", "omit_norms" : true,
              "fields" : {
                "raw" : { "type": "string", "index" : "not_analyzed", "ignore_above" : 256 }
              }
          }
        }
      } ],
      "properties" : {
        "@version": { "type": "string", "index": "not_analyzed" },
        "syslog_pid" : { "type" : "integer" },
        "ipt_srcport" : { "type" : "integer" },
        "ipt_dstport" : { "type" : "integer" },
        "ipt_ttl" : { "type": "short" },

        "ipt_srcgeo" : {
          "type" : "object",
          "properties" : {
            "location" : {
              "type" : "geo_point",
              "geohash" : true,
              "geohash_prefix" : true,
              "geohash_precision" : "1km"
            }
          }
        },
        "ipt_dstgeo" : {
          "type" : "object",
          "properties" : {
            "location" : {
              "type" : "geo_point",
              "geohash" : true,
              "geohash_prefix" : true,
              "geohash_precision" : "1km"
            }
          }
        },
        "ssh_srcgeo" : {
