{
  "template" : "httpdlog-*",
  "order" : "1",
  "settings" : {
    "index.refresh_interval" : "5s"
  },
  "mappings" : {
    "_default_" : {
      "_all" : { "enabled" : true },
      "dynamic_templates" : [ 
        {
          "ip_address_fields" : {
            "match" : "*_ip",
            "mapping" : { "type" : "ip" }
          }
        },
        {
          "ipv6_address_fields" : {
            "match" : "*_ipv6",
            "mapping" : { "type" : "ip" }
          }
        },
        {
          "string_fields" : {
            "match" : "*",
            "match_mapping_type" : "string",
            "mapping" : {
              "type" : "text",
              "fields" : {
                "keyword" : { "type" : "keyword" }
              }
            }
          }
        }
      ],
      "properties" : {
        "@version" : { "type" : "keyword" },
        "httpversion" : { "type" : "keyword" },
        "ident" : { "type" : "keyword" },
        "ips" : { "type" : "ip" },
        "response_code" : { "type" : "short" },
        "path" : { "type" : "keyword" },
        "original_message" : { "type" : "keyword" },
        "request_method" : { "type" : "keyword" },

        "source_geo" : {
          "type" : "object",
          "properties" : {
            "location" : { "type" : "geo_point", "geohash" : true, "geohash_prefix" : true, "geohash_precision" : "1km" }
          }
        }
      }
    }
  }
}
